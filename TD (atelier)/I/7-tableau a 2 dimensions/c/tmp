#include<stdio.h>
void input(int* n) {
  do {
    printf(">>");
    scanf("%d", n);
  } while (*n <= 0);
}

void remplir(int (*t)[50], int n,int m) {
    int i,j;
    printf("Remplissage du tableau de taille [%d][%d]\n",n,m);
   for (i=0; i<n; i++)
    for (j=0; j<m; j++)
        {
         printf("ElÃ©ment[%d][%d] : ",i,j);
         scanf("%d", &t[i][j]);
        }
}

int estMagique(int M[50][50], int n){
  int i;
  int j = 0, S = 0, S1 = 0, S2 = 0, Som = 0, Som2 = 0, k, h;
  int test = 1;
  // Colonne 0
  for (i = 0; i < n; i++)
  {
    S = S + M[i][j];
  }
  j++;
  // Colonnes
  do {
    for (i = 0; i < n; i++)
    {
      S1 = S1 + M[i][j];
    }
    if (S1 != S) {
      test = 0;
      break;
    }
    j++;
  } while (j < n);
  // Lignes
  i = 0;
  do {
    for (j = 0; j < n; j++)
    {
      S2 = S2 + M[i][j];
    }
    if (S2 != S) {
      test = 0;
      break;
    }
    i++;
  } while (i < n);
  // Verification des diagonales
  k = 0;
  for (i = 0; i < n; i++)
  {
    Som = Som + M[i][k];
    k++;
  }
  h = n;
  for (i = 0; i < n; i++)
  {
    Som2 = Som2 + M[i][h];
    h--;
  }
  if ((Som != S) || (Som2 != S))
  {
    test = 0;
  }
  return test;
}

void main(){
    int t[50][50];
    int l,c,res=0;
    printf("nombres de lignes:\n");
    input(&l);
    printf("nombres de colonnes:\n");
    input(&c);
    remplir(t,l,c);
    som_mag=0;
    for(i=0;i<n;i++) som_mag+=t[i][i];
    for(i=0;i<n;i++)
    {
       s=0;
       for(j=0;j<n;j++) s+=t[i][j];
       if(s!=som_mag){ mag=0; break;}
       s=0;
       for(j=0;j<n;j++) s+=t[j][i];
       if(s!=som_mag){ mag=0; break;}
    }
    s=0;
    for(i=0;i<n;i++) s+=t[i][n-i-1];
    if(s!=som_mag) mag=0;
    if(mag==1)
    {
        for(i=1;i<=n*n;i++) v[i]=0;
        for(i=0;i<n;i++)
        {
           for(j=0;j<n;j++)
              if(v[t[i][j]]==1 || t[i][j]>n*n || t[i][j]<1){ mag=0; break; }
              else v[t[i][j]]=1;
           if(mag==0) break;
        }
    }
    if(mag==1) printf("Le tableau est un carre magique.\n");
    else printf("Le tableau n'est pas un carre magique.\n");
}